<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateButton">

        <!--text color-->
        <attr name="textColorNormal" format="color|reference"/>
        <attr name="textColorPressed" format="color|reference"/>
        <attr name="textColorUnable" format="color|reference"/>
        <attr name="textColorSelected" format="color|reference"/>

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference"/>
        <attr name="strokeDashGap" format="dimension|reference"/>

        <attr name="strokeWidthNormal" format="dimension|reference"/>
        <attr name="strokeWidthPressed" format="dimension|reference"/>
        <attr name="strokeWidthUnable" format="dimension|reference"/>
        <attr name="strokeWidthSelected" format="dimension|reference"/>

        <attr name="strokeColorNormal" format="color|reference"/>
        <attr name="strokeColorPressed" format="color|reference"/>
        <attr name="strokeColorUnable" format="color|reference"/>
        <attr name="strokeColorSelected" format="color|reference"/>

        <!--background color-->
        <attr name="backgroundColorNormal" format="color|reference"/>
        <attr name="backgroundColorPressed" format="color|reference"/>
        <attr name="backgroundColorUnable" format="color|reference"/>
        <attr name="backgroundColorSelected" format="color|reference"/>

        <!--background cornersRadius-->
        <attr name="round" format="boolean|reference"/>
        <attr name="cornersRadius" format="dimension|reference"/>
        <attr name="cornersRadiusTopLeft" format="reference|dimension"/>
        <attr name="cornersRadiusTopRight" format="reference|dimension"/>
        <attr name="cornersRadiusBottomLeft" format="reference|dimension"/>
        <attr name="cornersRadiusBottomRight" format="reference|dimension"/>


        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference"/>

    </declare-styleable>

    <declare-styleable name="StateImageView">
        <attr name="normalBackground" format="color|reference"/>
        <attr name="pressedBackground" format="color|reference"/>
        <attr name="unableBackground" format="color|reference"/>

        <!--animation duration-->
        <attr name="AnimationDuration" format="integer|reference"/>
    </declare-styleable>
</resources>
